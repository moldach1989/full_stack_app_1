<h1>burgers!</h1>

<h2>waiting to be eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless consume}}
      {{!-- {{> main consume=true}} --}}
    {{/unless}}
  {{/each}}
</ul>

<h2>eaten</h2>

<ul>
  {{#each burgers}}
    {{#if consume}}
      {{!-- {{> main consume=false}} --}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="consume">consume?</label><br>
    <input type="radio" name="consume" value="1" checked> consume!<br>
    <input type="radio" name="consume" value="0"> eaten
  </div>

  <button type="submit">Add burger</button>
</form>
